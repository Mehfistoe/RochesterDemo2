<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_view_ll"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/list_view_tv1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="0"
        android:textSize="26sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bt_bg_released" />

    <TextView
        android:id="@+id/list_view_tv2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:hint="@string/app_name"
        android:textSize="26sp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/list_view_tv1"
        android:layout_toStartOf="@+id/list_view_tv3"/>

    <TextView
        android:id="@+id/list_view_tv3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="0"
        android:textSize="26sp"
        android:gravity="center"
        android:background="@drawable/bt_bg_released"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>